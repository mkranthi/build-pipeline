pipeline {
    agent any
    environment {
        DOCKER-HUB = credentails('docker-hub-cred')
    }
    stages {
        stage('Code Checkout') {
            steps {
                git branch: 'feature', url: 'https://github.com/mkranthi/build-pipeline.git'
            }
        }
        stage ('build docker image'){
            steps {
                sh "docker build -t itsoli-image ."
            }
        } 
        stage ('login to docker hub'){
            steps {
                sh "docker login https://hub.docker.com/ ${DOCKER-HUB}"
            }
        } 
    }
}
